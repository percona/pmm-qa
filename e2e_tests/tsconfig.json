{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "playwright"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "tests/**/*.ts",
    "playwright.config.ts"
  ]
}
